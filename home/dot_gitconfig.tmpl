[user]
  email = {{.email}}
  name = {{.nome}}

[init]
  defaultBranch = master

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  features = Dracula
  syntax-theme = Dracula
  line-numbers = true
  side-by-side = true
  navigate = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
